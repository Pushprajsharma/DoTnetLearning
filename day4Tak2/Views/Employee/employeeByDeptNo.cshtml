@model IEnumerable<Employee>
 <form asp-action="employeeByDeptNo">
        <input name="deptno"/>
        <input type="submit" class="btn-primary btn-primary"/>
    </form>

  
   
@{     
    if(ViewBag.RequestType == "POST"){
        <table>
          <tr>
            <th>Name</th>
            <th>Job</th>
            <th>Salary</th>
            <th>Dept</th>

          </tr>
        
        @foreach (Employee item in Model)
        {
           <tr>
            <td>@item.ename</td>
            <td>@item.job</td>
            <td>@item.salary</td>
            <td>@item.deptno</td>

          </tr>
        }
        </table>
        
    }
    
  }